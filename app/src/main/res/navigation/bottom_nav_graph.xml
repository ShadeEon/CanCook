<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/menuHomeID">

    <fragment
        android:id="@+id/menuHomeID"
        android:name="com.example.cancook.presentation.screen.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/menuSearchID"
        android:name="com.example.cancook.presentation.screen.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">

        <argument
            android:name="filterType"
            app:argType="string"
            android:defaultValue="none"/>
    </fragment>
    <fragment
        android:id="@+id/menuSavedID"
        android:name="com.example.cancook.presentation.screen.fragment.SavedFragment"
        android:label="fragment_saved"
        tools:layout="@layout/fragment_saved" />

</navigation>