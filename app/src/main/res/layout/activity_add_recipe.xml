<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".presentation.screen.activity.AddRecipeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/closeButtonIcon"
            android:src="@drawable/drawable_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newRecipeText"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/saveButton"
            app:layout_constraintStart_toEndOf="@+id/closeButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/saveButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/savedButton"
            android:src="@drawable/drawable_saved_fav"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/topBarLayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_constraintBottom_toTopOf="@id/bottomButtonsLayout"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/difficultyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/difficultyText"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/difficultySpinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:background="#F5F5F5"
                android:entries="@array/difficulty_levels"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintEnd_toStartOf="@+id/ratingInputContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/difficultyLabel" />

            <TextView
                android:id="@+id/ratingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ratingText"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/ratingInputContainer"
                app:layout_constraintTop_toTopOf="@+id/difficultyLabel" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ratingInputContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/difficultySpinner"
                app:layout_constraintTop_toBottomOf="@+id/ratingLabel">

                <EditText
                    android:id="@+id/ratingInputField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F5F5F5"
                    android:paddingStart="12dp"
                    android:paddingEnd="40dp"
                    android:inputType="numberDecimal"
                    android:autofillHints="0.0"
                    android:hint="@string/ratingSample"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ratingClearButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/clearInputIcon"
                    android:src="@drawable/ic_clear_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/ratingInputField"
                    app:layout_constraintEnd_toEndOf="@+id/ratingInputField"
                    app:layout_constraintTop_toTopOf="@+id/ratingInputField" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/titleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/titleText"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/difficultySpinner" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/titleInputContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/titleLabel">

                <EditText
                    android:id="@+id/titleInputField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F5F5F5"
                    android:paddingStart="12dp"
                    android:paddingEnd="40dp"
                    android:hint="@string/recipeTitle"
                    android:inputType="text"
                    android:autofillHints="Chicken Recipe"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/titleClearButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/clearInputIcon"
                    android:src="@drawable/ic_clear_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/titleInputField"
                    app:layout_constraintEnd_toEndOf="@+id/titleInputField"
                    app:layout_constraintTop_toTopOf="@+id/titleInputField" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imageUploadBlock"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                android:background="#EAEAEA"
                android:padding="24dp"
                app:layout_constraintTop_toBottomOf="@+id/titleInputContainer">

                <ImageView
                    android:id="@+id/uploadIcon"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:contentDescription="@string/uploadIcon"
                    android:src="@drawable/ic_upload"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/mealTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/MealType"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageUploadBlock" />

            <Spinner
                android:id="@+id/mealTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="#F5F5F5"
                android:entries="@array/difficulty_levels"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintTop_toBottomOf="@+id/mealTypeLabel" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/mealTypeChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="4dp"
                app:layout_constraintTop_toBottomOf="@+id/mealTypeSpinner">

                <!-- Generate chips here -->

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/tagsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/tagsText"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mealTypeChipGroup" />

            <Spinner
                android:id="@+id/tagsSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="#F5F5F5"
                android:entries="@array/difficulty_levels"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tagsLabel" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tagsChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tagsSpinner">

                <!-- Generate tags chips here -->

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/cuisineLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/cuisineText"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tagsChipGroup" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cuisineInputContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/cuisineLabel">

                <EditText
                    android:id="@+id/cuisineEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F5F5F5"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="40dp"
                    android:inputType="text"
                    android:autofillHints="Cuisine Name"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/cuisineDropdownIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/clearInputIcon"
                    android:src="@drawable/ic_clear_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/cuisineEditText"
                    app:layout_constraintEnd_toEndOf="@+id/cuisineEditText"
                    app:layout_constraintTop_toTopOf="@+id/cuisineEditText" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/prepTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/prepTimeText"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cuisineInputContainer" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/prepTimeInputContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/cookTimeInputContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/prepTimeLabel">

                <EditText
                    android:id="@+id/prepTimeInputField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F5F5F5"
                    android:paddingStart="12dp"
                    android:paddingEnd="40dp"
                    android:autofillHints="30mins"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/prepTimeClearButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/clearInputIcon"
                    android:src="@drawable/ic_clear_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/prepTimeInputField"
                    app:layout_constraintEnd_toEndOf="@+id/prepTimeInputField"
                    app:layout_constraintTop_toTopOf="@+id/prepTimeInputField" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/cookTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/cookTimeText"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/cookTimeInputContainer"
                app:layout_constraintTop_toBottomOf="@+id/cuisineInputContainer" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cookTimeInputContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/prepTimeInputContainer"
                app:layout_constraintTop_toBottomOf="@+id/cookTimeLabel">

                <EditText
                    android:id="@+id/cookTimeInputField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F5F5F5"
                    android:paddingStart="12dp"
                    android:paddingEnd="40dp"
                    android:autofillHints="30mins"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/cookTimeClearButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/clearInputIcon"
                    android:src="@drawable/ic_clear_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/cookTimeInputField"
                    app:layout_constraintEnd_toEndOf="@+id/cookTimeInputField"
                    app:layout_constraintTop_toTopOf="@+id/cookTimeInputField" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/ingredientsListLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/ingredientsText"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/prepTimeInputContainer" />

            <LinearLayout
                android:id="@+id/ingredientsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/ingredientsListLabel">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <EditText
                        android:id="@+id/ingredient_input_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#EEEEEE"
                        android:paddingStart="12dp"
                        android:paddingEnd="40dp"
                        android:text="1 lb Chicken Breast"
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ingredient_clear_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/clearInputIcon"
                        android:src="@drawable/ic_clear_circle"
                        app:layout_constraintBottom_toBottomOf="@+id/ingredient_input_1"
                        app:layout_constraintEnd_toEndOf="@+id/ingredient_input_1"
                        app:layout_constraintTop_toTopOf="@+id/ingredient_input_1" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <EditText
                        android:id="@+id/ingredient_input_2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#EEEEEE"
                        android:paddingStart="12dp"
                        android:paddingEnd="40dp"
                        android:text="1/2 cup Peanut Sauce"
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ingredient_clear_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/clearInputIcon"
                        android:src="@drawable/ic_clear_circle"
                        app:layout_constraintBottom_toBottomOf="@+id/ingredient_input_2"
                        app:layout_constraintEnd_toEndOf="@+id/ingredient_input_2"
                        app:layout_constraintTop_toTopOf="@+id/ingredient_input_2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <EditText
                        android:id="@+id/ingredient_input_3"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#EEEEEE"
                        android:paddingStart="12dp"
                        android:paddingEnd="40dp"
                        android:text="2 Bell Peppers"
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ingredient_clear_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/clearInputIcon"
                        android:src="@drawable/ic_clear_circle"
                        app:layout_constraintBottom_toBottomOf="@+id/ingredient_input_3"
                        app:layout_constraintEnd_toEndOf="@+id/ingredient_input_3"
                        app:layout_constraintTop_toTopOf="@+id/ingredient_input_3" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/servingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/servingText"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ingredientsList" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/servingInputContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/caloriesInputContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/servingLabel">

                <EditText
                    android:id="@+id/servingInputField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F5F5F5"
                    android:paddingStart="12dp"
                    android:paddingEnd="40dp"
                    android:inputType="number"
                    android:autofillHints="4"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/servingClearButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/clearInputIcon"
                    android:src="@drawable/ic_clear_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/servingInputField"
                    app:layout_constraintEnd_toEndOf="@+id/servingInputField"
                    app:layout_constraintTop_toTopOf="@+id/servingInputField" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/caloriesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/caloriesServingText"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/caloriesInputContainer"
                app:layout_constraintTop_toBottomOf="@+id/ingredientsList" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/caloriesInputContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/servingInputContainer"
                app:layout_constraintTop_toBottomOf="@+id/caloriesLabel">

                <EditText
                    android:id="@+id/caloriesInputField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F5F5F5"
                    android:paddingStart="12dp"
                    android:paddingEnd="40dp"
                    android:inputType="number"
                    android:autofillHints="400"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/caloriesClearButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/clearInputIcon"
                    android:src="@drawable/ic_clear_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/caloriesInputField"
                    app:layout_constraintEnd_toEndOf="@+id/caloriesInputField"
                    app:layout_constraintTop_toTopOf="@+id/caloriesInputField" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/instructionsListLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/instructionsText"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/servingInputContainer" />

            <LinearLayout
                android:id="@+id/instructionsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/instructionsListLabel">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/step_number_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="#D3CFFC"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/step_input_1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:background="#EEEEEE"
                        android:paddingStart="12dp"
                        android:paddingEnd="40dp"
                        android:text="Marinate the chicken in half the peanut sauce for 10 minutes."
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/step_number_1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/step_clear_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/clearInputIcon"
                        android:src="@drawable/ic_clear_circle"
                        app:layout_constraintBottom_toBottomOf="@+id/step_input_1"
                        app:layout_constraintEnd_toEndOf="@+id/step_input_1"
                        app:layout_constraintTop_toTopOf="@+id/step_input_1" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/step_number_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="#D3CFFC"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/step_input_2"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:background="#EEEEEE"
                        android:paddingStart="12dp"
                        android:paddingEnd="40dp"
                        android:text="Stir-fry the chicken until cooked through (10 mins)."
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/step_number_2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/step_clear_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/clearInputIcon"
                        android:src="@drawable/ic_clear_circle"
                        app:layout_constraintBottom_toBottomOf="@+id/step_input_2"
                        app:layout_constraintEnd_toEndOf="@+id/step_input_2"
                        app:layout_constraintTop_toTopOf="@+id/step_input_2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/step_number_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="#D3CFFC"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/step_input_3"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:background="#EEEEEE"
                        android:paddingStart="12dp"
                        android:paddingEnd="40dp"
                        android:text="Add remaining peanut sauce and serve."
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/step_number_3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/step_clear_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/clearInputIcon"
                        android:src="@drawable/ic_clear_circle"
                        app:layout_constraintBottom_toBottomOf="@+id/step_input_3"
                        app:layout_constraintEnd_toEndOf="@+id/step_input_3"
                        app:layout_constraintTop_toTopOf="@+id/step_input_3" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/descriptionText"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/instructionsList" />

            <EditText
                android:id="@+id/descriptionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#F5F5F5"
                android:hint="This is a description for the food nice tasty..."
                android:padding="12dp"
                android:minLines="3"
                android:gravity="top|start"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/descriptionLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/cancelButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/cancelText"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/saveDraftButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/saveDraftButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/publishText"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF4081"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cancelButton"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>